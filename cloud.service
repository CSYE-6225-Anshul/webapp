[Unit]
Description=CSYE 6225 webapp service
ConditionPathExists=/home/admin/webapp
After=cloud-final.target

[Service]
Type=simple
User=admin
Group=admin
WorkingDirectory=/home/admin/webapp
ExecStartPre=/bin/echo "Before starting"
ExecStart=/usr/bin/node /home/admin/webapp/server.js
ExecStartPost=/bin/echo "After starting"
Restart=always
RestartSec=3
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=csye6225

[Install]
WantedBy=cloud-init.target
