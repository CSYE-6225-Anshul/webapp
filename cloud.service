[Unit]
Description=CSYE 6225 webapp service
ConditionPathExists=/opt/csye6225/webapp
After=cloud-final.target

[Service]
Type=simple
User=csye6225
Group=csye6225
WorkingDirectory=/opt/csye6225/webapp
ExecStartPre=/bin/echo "Before starting"
ExecStart=/usr/bin/node /opt/csye6225/webapp/server.js
ExecStartPost=/bin/echo "After starting"
Restart=always
RestartSec=3
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=csye6225

[Install]
WantedBy=cloud-init.target
